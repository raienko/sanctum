{
  "testRunner": "jest",
  "runnerConfig": "e2e/config.json",
  "apps": {
    "ios": {
      "type": "ios.app",
      "binaryPath": "./ios/build/Build/Products/Debug-iphonesimulator/Sanctum.app",
      "build": "xcodebuild -workspace ios/Sanctum.xcworkspace -UseNewBuildSystem=YES -scheme Sanctum -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build -arch x86_64"
    },
    "android": {
      "type": "android.apk",
      "binaryPath": "./android/app/build/outputs/apk/release/app-release.apk",
      "build": "cd android ; ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug ; cd -"
    }
  },
  "devices": {
    "simulator": {
      "type": "ios.simulator",
      "device": {
        "type": "iPhone 11"
      }
    },
    "emulator": {
      "type": "android.emulator",
      "device": {
        "avdName": "Pixel_3a_API_30_x86"
      }
    }
  },
  "configurations": {
    "ios": {
      "device": "simulator",
      "app": "ios"
    },
    "android": {
      "device": "emulator",
      "app": "android"
    }
  }
}
